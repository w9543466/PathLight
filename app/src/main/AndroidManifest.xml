<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PathLight"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize"
        tools:targetApi="31">

        <activity
            android:name=".RoutingActivity"
            android:exported="true"
            android:theme="@style/Theme.PathLight.LightStatusBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.IntroActivity"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".employer.home.EmployerHome"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".employer.applications.ApplicationsActivity"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".employer.home.WorkDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".employer.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".employer.home.NewWorkActivity"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".worker.WorkerHome"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
        <activity
            android:name=".worker.WorkerApplications"
            android:exported="false"
            android:theme="@style/Theme.PathLight.LightStatusBar" />
    </application>

</manifest>